<div class="row justify-content-center">
  <div class="col-6">
    <h3>Create new - Items</h3>
    <%= simple_form_for [@restaurant, @item] do |t| %>
      <%= t.input :name%>
      <%= t.input :description%>
      <%= t.input :category, collection: ["Starter", "Main Course","Dessert", "Drinks"]%>
      <%= t.input :price, label: "How much?", placeholder: " Ex: 50.00"%>
      <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
      <%= t.input :photo, input_html: { class: 'd-none', id: 'photo-input' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload an item' %>
      <%= t.submit%>
    <% end %>
    <%= link_to 'Back', restaurant_path(@restaurant), class: "btn btn-outline-secondary" %>
  </div>
</div>
