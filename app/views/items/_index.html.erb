<h2>Menu Itens</h2>

<div class="cards">
<%items.each do |item| %>
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2><%= item.name %></h2>
      <p><%= item.description %></p>
      <p><%= item.price %></p>
      <%= link_to 'Add', new_cart_cart_item_path(current_user.cart), class: "btn btn-outline-secondary" %>
      
    </div>
  </div>
<% end %>
</div>
