<%# I'm hungry and looking for something to eat. %>
<div class="container">
  <%# Okay, what is in the menu. %>
  <h1>Restaurant Menu</h1>
  <div class="accordion" id="accordionExample">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h2 class="mb-0">
          <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            Entradas
          </button>
        </h2>
      </div>
      <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="card-body">
          <%items.each do |item| %>
            <% if item.category == "Starter" %>
              <div class="card-product">
                <div class="plate">
                    <img src="https://github.com/CodeFrogShow/UI-Design-Food-Delivery-App/blob/master/imgs/food/tsr.png?raw=true" />
                </div>
                <%# What's is the name of this delicious thing I'm about to eat? %>
                <h2><%= item.name %></h2>
                <%# Humm, tell me more... %>
                <p><%= item.description %></p>
                <%# How much will it cost me? %>
                <p><%= item.price %></p>
                <%# if I'm here? Thats is a odd question. %>
                <% if current_user.present?%>
                  <%# Should I buy it? %>
                  <%if current_user.cart%>
                    <%# Screw it, I will buy it. %>
                    <%= link_to 'Add', cart_cart_items_path(current_user.cart, item_id: item), class: "btn btn-outline-secondary", method: :post %>
                  <% else %>
                    <%= link_to 'meza', "#", class: "btn btn-outline-secondary"%>
                  <% end %>
                <% else %>
                  <%= link_to 'meza', "#", class: "btn btn-outline-secondary"%>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
