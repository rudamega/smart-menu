<div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-between">
  <%= link_to root_path, class: "navbar-brand" do %>
    <span>Smart Menu</span>
  <% end %>
      <% if user_signed_in? %>
        <%if current_user.cart%>
          <%=link_to cart_path(current_user.cart) do %>
            <h2><%=cl_image_tag("waiter_lmexhv", height: 30, width: 30, crop: :fill)%></h2>
          <% end %>
        <%end%>
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% else%>
        <%= image_tag "logo.png", height: 50, width: 50, crop: :fill, class: "dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Restaurants", my_restaurant_path, class: "dropdown-item" %>
            <%#= link_to "Service", carts_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
      <% else %>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      <% end %>
    </div>
