<% if @restaurant.photo.attached? %>
<div class="welcome-banner" style="background-image: url('<%= @restaurant.photo %>')">  </div>
<% else %>
<div class="welcome-banner" style="background-image: url('https://res.cloudinary.com/dpjghjtp1/image/upload/v1591742887/nik-owens-40OJLYVWeeM-unsplash_mjrgxq.jpg')">  </div>
<% end %>
<div>
  <%= render 'items/index', items: @restaurant.items %>

</div>
<div class="d-flex justify-content-center mt-3">


</div>

	<!-- Modal -->
	<div class="modal right fade" id="choosetable" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
		<div class="modal-dialog" role="document">
			<div class="modal-content">

				<div class="modal-header">
				<h4 class="modal-title" id="myModalLabel2">Choose a table</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				</div>

  <%= render 'places/index', places: @restaurant.places %>

			</div><!-- modal-content -->
		</div><!-- modal-dialog -->
	</div><!-- modal -->

</div><!-- container -->
<div class="footer-white"></div>
<% if @carts %>
   <%=link_to cart_path(@carts) do %>
  <div class="footer"><h3 class="glyphicon glyphicon-shopping-cart text-center"> (table <%= @carts.place.name %>)</h3></div>
  <% end %>
  <% else %>
  <button type="button" class="footer" data-toggle="modal" data-target="#choosetable">
          CHOOSE A TABLE
  </button>
<% end %>

