  <div class="col-12">
    <h3>Create new - Restaurant</h3>
    <%= simple_form_for(@restaurant) do |t| %>
      <%= t.input :name, input_html: { id: "input-typed-text"}%>
      <%= t.input :address%>
      <%= t.input :phone%>
      <%= t.input :email%>
      <%# como pasar o array de categorias? %>
      <%= t.input :category, collection: ["chinese", "brasilian"]%>
       <%= t.input :photo, input_html: { class: 'd-none', id: 'photo-input' }, label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a photo' %>
      <%= t.submit%>
    <% end %>
    <%= link_to 'Back', my_restaurant_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
